@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımda Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="abouttitle">Hakkımda başlığını giriniz:</label>
								<input type="text" class="form-control" asp-for="Title" id="abouttitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="aboutdescription">Hakkımda açıklamasını giriniz:</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="aboutdescription"></textarea>
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="aboutimageurl">Hakkımda görsel url giriniz:</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="aboutimageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda bilgisini Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

