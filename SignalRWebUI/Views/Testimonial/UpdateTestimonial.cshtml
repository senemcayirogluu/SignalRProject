@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Yorumu Güncelleme</div>
						</div>
						<input type="hidden" asp-for="TestimonialID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Müşteri adını giriniz:</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="title">Müşteri unvanını giriniz:</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Müşteri görsel url giriniz:</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="comment">Müşteri yorumunu giriniz:</label>
								<input type="text" class="form-control" asp-for="Comment" id="comment">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Referans Yorumunu Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


